<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.example.christoforos.myapplication.backend.servlets.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateMessageServlet</servlet-name>
        <servlet-class>com.example.christoforos.myapplication.backend.servlets.CreateMessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateMessageServlet</servlet-name>
        <url-pattern>/createmessage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListMessagesServlet</servlet-name>
        <servlet-class>com.example.christoforos.myapplication.backend.servlets.ListMessagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListMessagesServlet</servlet-name>
        <url-pattern>/fetchmessages</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostSearchTextServlet</servlet-name>
        <servlet-class>com.example.christoforos.myapplication.backend.servlets.PostSearchTextServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostSearchTextServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>